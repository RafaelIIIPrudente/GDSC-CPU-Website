<%- include('partials/header') -%> 
<h3 class="temp-title" style="margin-top: 1.5rem; margin-bottom: 1.5 rem">Create an Event</h3>

<div class="create-event-form">
  <div class="greetings" class="create-event-form">
    <div class="navbar">
      <div class="container event-form">
        <form method="post" action="/create-event">
          <div class="form-group form-item">
            <label style="font-weight: bold;">Title</label>
            <input type="text" class="form-control" placeholder="Enter title" name="title" required>
            <small id="emailHelp" class="form-text text-muted">Welcome and congratulations on coming up with an event!</small>
          </div>
          <div class="form-group form-item">
            <label style="font-weight: bold;">Event Date</label>
            <input type="text" class="form-control" placeholder="Year, Month, Day" name="date" required>
          </div>
          <div class="form-group form-item">
            <label style="font-weight: bold;">Event Lead</label>
            <input type="text" class="form-control" placeholder="Enter name" name="name" required>
          </div>
          <div class="form-group form-item">
            <label style="font-weight: bold;">Description</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3" placeholder="Enter description" required></textarea>
          </div>
          <label class="form-item" for="exampleFormControlFile1" style="font-weight: bold; margin-bottom: 0px !important;">Event Banner</label>
          <input type="file" class="form-control-file form-item" style="margin-top: 0px !important;" id="exampleFormControlFile1">
          <button type="submit" class="btn btn-primary form-item" style="margin-top: 1rem;">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%> 