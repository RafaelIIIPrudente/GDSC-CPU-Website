<%- include('partials/header') -%> 
  <div class="create-event-form">
    <div class="greetings" class="create-event-form">
      <div class="navbar">
        <div class="container event-form"  style="align-items: center;">
          <form method="post" action="/admin-login">
            <div class="form-group form-item title-admin-login" style="align-items: flex-end;">
              <h1 class="temp-title">Admin Login</h1>
            </div>
            <div class="form-group form-item">
              <label>Username</label>
              <input type="text" class="form-control" placeholder="Enter username" name="adminUsername" required>
            </div>
            <div class="form-group form-item">
              <label>Password</label>
              <input type="password" class="form-control" placeholder="Enter password" name="adminPassword" required>
            </div>
            <button type="submit" class="btn btn-primary form-item" style="margin-top: 1rem;">Log in</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>